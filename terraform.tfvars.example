# AWS Configuration
region         = "us-east-1"
environment    = "staging"
project_name   = "uce"

# VPC Configuration
# Option 1: Use existing VPC
use_existing_vpc = false
# vpc_id = "vpc-0008af468cf10c190"
# public_subnet_ids = ["subnet-xxxxx", "subnet-yyyyy"]

# Option 2: Create new VPC
vpc_cidr_block     = "10.0.0.0/16"
public_subnet_count = 2

# Private Subnets Configuration
# Private subnets will be created with these CIDR blocks
private_subnet_cidrs = ["10.0.128.0/24", "10.0.129.0/24"]

# Availability Zones (leave empty to use available AZs)
# availability_zones = ["us-east-1a", "us-east-1b"]

# EKS Configuration
cluster_name         = "uce-cluster-academic"
eks_cluster_role_arn = "arn:aws:iam::ACCOUNT_ID:role/ROLE_NAME"

# Node Configuration
# If node_role_arn is provided, creates managed node group
# If not provided, creates self-managed ASG with Launch Template
node_role_arn = ""  # "arn:aws:iam::ACCOUNT_ID:role/NODE_ROLE_NAME"

instance_types = ["t3.medium"]
desired_size   = 2
min_size       = 1
max_size       = 4
disk_size      = 20
capacity_type  = "ON_DEMAND"  # ON_DEMAND or SPOT
ami_type       = "AL2023_x86_64_STANDARD" # AL2023_x86_64_STANDARD for Kubernetes 1.33+, AL2_x86_64 for 1.32 or earlier

# EKS Security Configuration
# For production, restrict public access:
# endpoint_public_access = true
# public_access_cidrs = ["YOUR_IP/32"]  # Restrict to specific IPs
# For development/testing, allow all (not recommended for production):
# endpoint_public_access = true
# public_access_cidrs = []  # Empty = all IPs allowed

# Logging Configuration
log_retention_days = 7

# Common Tags
common_tags = {
  Environment = "staging"
  Project     = "UCE"
  ManagedBy   = "Terraform"
}




